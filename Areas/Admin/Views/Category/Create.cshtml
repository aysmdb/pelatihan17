@model Category

<h3>Add Category</h3>

<div class="row">
    <div class="col">
        <form action="Create" method="post">
            <div class="form-group">
                <label for="Name" class="control-label">Name</label>
                <input name="Name" class="form-control" />
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-success">Save</button>
            </div>
        </form>
    </div>
</div>